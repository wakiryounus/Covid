<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:context=".PrecautionActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/relLayoutOne"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/face_mask"
                    android:layout_margin="8dp"
                    android:src="@mipmap/facemask"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <ImageView
                    android:id="@+id/wash_hands"
                    android:layout_width="200dp"
                    android:src="@mipmap/washhands"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@+id/face_mask"
                    android:layout_height="200dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/relLayoutTwo"
                android:layout_below="@+id/relLayoutOne"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/stay_home"
                    android:layout_margin="8dp"
                    android:src="@mipmap/awarenessstayhome"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <ImageView
                    android:id="@+id/disinfect"
                    android:layout_width="200dp"
                    android:src="@mipmap/disinfected"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@+id/stay_home"
                    android:layout_height="200dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/relLayoutThree"
                android:layout_below="@+id/relLayoutTwo"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/throw_away"
                    android:layout_margin="8dp"
                    android:src="@mipmap/throwaway"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <ImageView
                    android:id="@+id/clean"
                    android:layout_width="200dp"
                    android:src="@mipmap/clean"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@+id/throw_away"
                    android:layout_height="200dp"/>

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>
</ScrollView>
