<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@mipmap/detailsbackgroud"
    tools:context=".GlobalActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/tv_state_name"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:id="@+id/tv_indian_active"
                android:textStyle="bold"
                android:layout_below="@id/tv_state_name"
                android:textColor="@color/blue"
                android:layout_marginVertical="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:layout_below="@+id/tv_indian_active"
                android:id="@+id/tv_indian_death"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_below="@+id/tv_indian_death"
                android:id="@+id/tv_indian_recovered"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_below="@+id/tv_indian_recovered"
                android:id="@+id/tv_indian_total"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>